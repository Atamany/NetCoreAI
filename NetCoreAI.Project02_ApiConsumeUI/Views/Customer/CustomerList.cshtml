@model List<NetCoreAI.Project02_ApiConsumeUI.DTOs.ResultCustomerDTO>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Müşteri Adı Soyadı</th>
            <th>Bakiye</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.CustomerName @item.CustomerSurname</td>
                <td>@item.CustomerBalance</td>
                <td><a href="~/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-danger">Sil</a></td>
                <td><a href="~/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </table>
    <td><a href="~/Customer/AddCustomer/" class="btn btn-primary">Ekle</a></td>
</div>